<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.parent.AccountAreaFragment"
    android:background="@color/colorWhite">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/KidselfText"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/carlisle_regular"
        android:text="@string/stringLogoText"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <TextView
        android:id="@+id/ParentText"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="220dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/carlisle_regular"
        android:text="@string/stringParent"
        android:textAllCaps="false"
        android:textColor="@color/colorParent"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <View style="@style/Divider"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp" />

    <TextView
    android:id="@+id/codeGeneral"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:fontFamily="@font/roboto_regular"
    android:text="@string/stringCodeGeneral"
    android:textAllCaps="false"
    android:textColor="@color/colorBlack"
    android:textSize="20sp"
    android:layout_marginStart="40dp"
    android:textStyle="bold|italic"
    android:visibility="visible" />

    <TextView
        android:id="@+id/codeGeneralInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/stringCodeGeneralInfo"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:layout_marginStart="40dp"
        android:visibility="visible" />

    <View style="@style/Divider"

        android:layout_width="match_parent"
        android:alpha="0.3"
        android:background="@color/colorBlack" />

    <TextView
        android:id="@+id/device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/stringDevice"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:layout_marginStart="40dp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <TextView
        android:id="@+id/deviceInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/stringDeviceInfo"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:layout_marginStart="40dp"
        android:visibility="visible" />

    <View style="@style/Divider"

        android:layout_width="match_parent"
        android:alpha="0.3"
        android:background="@color/colorBlack" />

</LinearLayout>

</FrameLayout>