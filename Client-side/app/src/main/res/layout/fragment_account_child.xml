<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.child.AccountChildFragment"
    android:background="@color/colorWhite">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/KidselfText"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/carlisle_regular"
        android:text="@string/stringLogoText"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <TextView
        android:id="@+id/ChildText"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="270dp"
        android:fontFamily="@font/carlisle_regular"
        android:text="@string/stringChild"
        android:textAllCaps="false"
        android:textColor="@color/colorChild"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <View style="@style/Divider"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/codeGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/stringCodeGeneral"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:layout_marginStart="40dp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <TextView
        android:id="@+id/codeGeneralInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/stringCodeGeneralInfo"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:layout_marginStart="40dp"
        android:visibility="visible" />

    <View style="@style/Divider"

        android:layout_width="match_parent"
        android:alpha="0.3"
        android:background="@color/colorBlack" />

    <TextView
        android:id="@+id/device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/stringDevice"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:layout_marginStart="40dp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <TextView
        android:id="@+id/deviceInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/stringDeviceInfo"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:layout_marginStart="40dp"
        android:visibility="visible" />

    <View style="@style/Divider"

        android:layout_width="match_parent"
        android:alpha="0.3"
        android:background="@color/colorBlack" />

    <Switch
        android:id="@+id/serviceSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/colorBase"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:checked="false"
        android:text="Turn on the service to listen to" />


</LinearLayout>
</FrameLayout>