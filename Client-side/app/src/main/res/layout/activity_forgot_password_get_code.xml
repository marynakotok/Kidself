<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.forgot_password.ForgotPasswordGetCodeActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/KidselfText"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/carlisle_regular"
        android:text="@string/stringLogoText"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <TextView
        android:id="@+id/ParentText"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="220dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/carlisle_regular"
        android:text="@string/stringParent"
        android:textAllCaps="false"
        android:textColor="@color/colorParent"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <View style="@style/Divider"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/timer"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"/>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/received_code"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            android:hint="@string/stringRecCode"
            android:maxLength="5"
            android:maxLines="1"
            android:background="@drawable/field_parent"
            android:fontFamily="@font/roboto_regular"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/EyeParent1"
            android:layout_width="wrap_content"
            android:contentDescription="@string/stringPassword"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/eye_view" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/password"
            android:imeActionId="6"
            android:background="@drawable/field_parent"
            android:imeActionLabel="@string/stringPassword"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/stringPassNew"
            android:maxLength="10"
            android:padding="10dp"
            android:textColor="@color/colorBlack" />

        <ImageView
            android:id="@+id/EyeParent2"
            android:layout_width="wrap_content"
            android:contentDescription="@string/stringPassword"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/eye_view" />

    </RelativeLayout>

    <Button
        android:id="@+id/change_button"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorWhite"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:textAllCaps="true"
        android:textSize="40sp"
        android:background="@drawable/button_parent"
        android:fontFamily="@font/carlisle_regular"
        android:text="@string/stringChangePass" />

    <ProgressBar
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:id="@+id/progress"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true" />

</LinearLayout>