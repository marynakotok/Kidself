<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".map.AvailableChildServicesFragment"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/KidselfText"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/carlisle_regular"
            android:text="@string/stringLogoText"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="50sp"
            android:textStyle="bold|italic"
            android:visibility="visible" />

        <TextView
            android:id="@+id/ParentText"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginStart="220dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/carlisle_regular"
            android:text="@string/stringParent"
            android:textAllCaps="false"
            android:textColor="@color/colorParent"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:visibility="visible" />

        <View style="@style/Divider"
            android:layout_marginTop="15dp"
            android:layout_marginStart="40dp" />

        <TextView
            android:id="@+id/selectChild"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_horizontal"
            android:text="Select a child to listen to from possible and connected ones:"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:visibility="visible" />

        <ListView
            android:id="@+id/ServiceTable"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.32"
            android:padding="10dp" >
        </ListView>

    </LinearLayout>

</FrameLayout>


