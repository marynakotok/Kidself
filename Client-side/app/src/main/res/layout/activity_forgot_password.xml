<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.forgot_password.ForgotPasswordActivity">

    <TextView
        android:id="@+id/KidselfText"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/carlisle_regular"
        android:text="@string/stringLogoText"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <TextView
        android:id="@+id/ParentText"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="220dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/carlisle_regular"
        android:text="@string/stringParent"
        android:textAllCaps="false"
        android:textColor="@color/colorParent"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <View style="@style/Divider"
        android:layout_marginBottom="150dp"
        android:layout_marginStart="40dp" />

    <EditText
        android:id="@+id/email"
        android:hint="@string/stringEmail"
        android:background="@drawable/field_parent"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:layout_marginBottom="50dp"
        android:layout_width="250dp"
        android:maxLength="30"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="70dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        android:padding="10dp"/>

    <Button
        android:id="@+id/continue_button"
        android:layout_marginStart="65dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorWhite"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:textAllCaps="true"
        android:textSize="40sp"
        android:background="@drawable/button_parent"
        android:fontFamily="@font/carlisle_regular"
        android:text="@string/stringContinue" />

    <ProgressBar
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:id="@+id/progress"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true" />

</LinearLayout>