<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.child.EmergenceButtonChildFragment"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/KidselfText"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/carlisle_regular"
            android:text="@string/stringLogoText"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="50sp"
            android:textStyle="bold|italic"
            android:visibility="visible" />

        <TextView
            android:id="@+id/ChildText"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="270dp"
            android:fontFamily="@font/carlisle_regular"
            android:text="@string/stringChild"
            android:textAllCaps="false"
            android:textColor="@color/colorChild"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:visibility="visible" />

        <View style="@style/Divider"
            android:layout_marginTop="15dp"
            android:layout_marginStart="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendAlertText"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorLink"
            android:text="@string/stringSendAlert"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:padding="5dp"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:textSize="20sp"
            android:text="@string/stringClickRedButton"/>

        <Button
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="250dp"
            android:text="@string/stringSOS"
            android:textSize="100sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/emergence_button"
            android:textColor="@color/colorWhite"
            android:background="@drawable/emergency_button"
            />

    </LinearLayout>

</FrameLayout>