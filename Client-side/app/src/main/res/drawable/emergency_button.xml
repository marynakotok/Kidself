            <stroke android:width="15dip" android:color="@color/colorChild"/>
            <gradient android:angle="180" android:startColor="@color/colorBase"
                android:endColor="@color/colorBase"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient android:angle="180" android:startColor="@color/colorBase"
                android:endColor="@color/colorBase"/>
        </shape>
    </item>

</selector>